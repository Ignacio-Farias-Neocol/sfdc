<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Closed_Won_Primary_Contact</fullName>
    <active>true</active>
    <description>Check to see if the Primary Contact has a Mailing Address Country.</description>
    <errorConditionFormula>AND( 
 ISPICKVAL(StageName, &apos;Closed Won&apos;), 
 NOT($Permission.BYPASS_ALL_VALIDATIONS_ON_OPPTY),
 ISBLANK(TEXT(Primary_Contact__r.MailingCountryCode))
)</errorConditionFormula>
    <errorMessage>Missing a &apos;Primary Contact Mailing Country&apos;.</errorMessage>
</ValidationRule>
