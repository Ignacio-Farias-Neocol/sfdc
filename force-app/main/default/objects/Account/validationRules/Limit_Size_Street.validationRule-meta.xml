<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Limit_Size_Street</fullName>
    <active>true</active>
    <description>Check BillingStreet (150 chars limit)</description>
    <errorConditionFormula>AND(  
 NOT($Permission.BYPASS_ALL_VALIDATIONS_ON_OPPTY),
 LEN( BillingStreet ) &gt; 150
)</errorConditionFormula>
    <errorDisplayField>BillingStreet</errorDisplayField>
    <errorMessage>Please check Address Street (150 chars limit).</errorMessage>
</ValidationRule>
