    <description>Stamps a value into ExtID and Lookup Key</description>
    <formulas>
        <name>FormulaIsActive</name>
        <dataType>String</dataType>
        <expression>IF(AND(Today() &gt;= {!$Record.Valid_Start_Date__c},Today() &lt; {!$Record.Valid_End_Date__c}),&quot;true&quot;,{!$Record.Id})</expression>
    </formulas>
    <formulas>
        <description>Concatenates Product Code, Parent Product Code, Region, Currency ISO Code, Appliance Type, and Active</description>
        <name>LookupKey</name>
        <dataType>String</dataType>
        <expression>{!VarProductCode}&amp;{!VarParentProductCode}&amp;{!VarRegion}&amp;{!VarCurrencyISOCode}&amp;{!VarApplianceType}&amp;{!FormulaIsActive}</expression>
    </formulas>
