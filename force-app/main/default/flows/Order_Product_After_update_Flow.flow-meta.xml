    <decisions>
        <description>This is an RMA replacement Order Item, try to update Asset with Replacement Product.</description>
        <name>Is_RMA_replacement_Product</name>
        <label>Is RMA replacement Product</label>
        <locationX>286</locationX>
        <locationY>379</locationY>
        <defaultConnectorLabel>Replacement Product - No</defaultConnectorLabel>
        <rules>
            <name>Replacement_Product_Yes</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Replacement_Product__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.SBQQ__Activated__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.SBCF_Order_Line_Type__c</leftValueReference>
                <operator>Contains</operator>
                <rightValue>
                    <stringValue>RMA Replace</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Original_Asset_Id__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Order.Quote_Business_Group__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Barracuda</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Find_Asset_to_Update</targetReference>
            </connector>
            <label>Replacement Product - Yes</label>
        </rules>
    </decisions>
