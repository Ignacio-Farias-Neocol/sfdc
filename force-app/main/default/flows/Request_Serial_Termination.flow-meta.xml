    <recordLookups>
        <description>Get status field for the serial record.</description>
        <name>Get_Serial_Record</name>
        <label>Get Serial Record</label>
        <locationX>54</locationX>
        <locationY>220</locationY>
        <assignNullValuesIfNoRecordsFound>true</assignNullValuesIfNoRecordsFound>
        <connector>
