            <operator>EqualTo</operator>
            <value>
                <elementReference>recordId</elementReference>
            </value>
        </filters>
        <inputAssignments>
            <field>Status__c</field>
            <value>
                <stringValue>Pending Termination</stringValue>
            </value>
        </inputAssignments>
        <object>Serial__c</object>
    </recordUpdates>
