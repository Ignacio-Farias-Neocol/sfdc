            </value>
        </assignmentItems>
    </assignments>
    <choices>
        <description>Indicates that the user does not want to terminate the serial</description>
        <name>Radiobutton_Choice_No_Termination</name>
        <choiceText>No, I do no want to request termination.</choiceText>
        <dataType>Boolean</dataType>
        <value>
            <booleanValue>false</booleanValue>
        </value>
    </choices>
    <choices>
        <description>Indicates user wants to request termination</description>
        <name>Radiobutton_Choice_Yes_Termination</name>
        <choiceText>Yes, Request termination of the Serial</choiceText>
        <dataType>Boolean</dataType>
        <value>
            <booleanValue>true</booleanValue>
        </value>
    </choices>
    <decisions>
        <description>Check user&apos;s decision.</description>
        <name>Decision_Check_User_Selection</name>
        <label>Decision: Check User Selection</label>
        <locationX>666</locationX>
        <locationY>50</locationY>
        <defaultConnector>
            <targetReference>End_the_Flow</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Exit Process</defaultConnectorLabel>
        <rules>
            <name>Yes_Request_Termination</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Radiobutton_Choice_Yes_Termination</leftValueReference>
                <operator>WasSelected</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Set_Status_To_Pending_Termination</targetReference>
            </connector>
            <label>Yes, Request Termination</label>
        </rules>
    </decisions>
    <decisions>
        <description>Check if the serial was fetched</description>
        <name>Decision_Serial_Fetch</name>
        <label>Decision Serial Fetch</label>
        <locationX>46</locationX>
        <locationY>431</locationY>
        <defaultConnector>
            <targetReference>Screen_Serial_Record_Fetch_Result</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Serial Not Found</defaultConnectorLabel>
        <rules>
            <name>Serial_Found</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>thisSerial</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Design_MSP_Check</targetReference>
            </connector>
            <label>Serial Found</label>
        </rules>
    </decisions>
    <decisions>
        <description>Checks if the Status is Active. Cannot request termination for an inactive status.</description>
        <name>Decision_Status_Check</name>
        <label>Decision Status Check</label>
        <locationX>265</locationX>
        <locationY>430</locationY>
        <defaultConnector>
            <targetReference>Screen_Status_Validation</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Serial is not Active</defaultConnectorLabel>
        <rules>
            <name>Active_Serial</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>thisSerial.Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Active</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Screen_Serial_Termination_Confirmation</targetReference>
            </connector>
            <label>Active Serial</label>
        </rules>
    </decisions>
    <decisions>
        <description>Checks if this is an MSP Serial</description>
        <name>Design_MSP_Check</name>
        <label>Design MSP Check</label>
        <locationX>265</locationX>
        <locationY>615</locationY>
        <defaultConnector>
            <targetReference>Screen_Non_MSP_Serial</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Non MSP Serial</defaultConnectorLabel>
        <rules>
            <name>MSP_Serial</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>thisSerial.Business_Group__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>MSP</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Decision_Status_Check</targetReference>
            </connector>
            <label>MSP Serial</label>
        </rules>
    </decisions>
