    <formulas>
        <description>Formula determining if the state field is required or not</description>
        <name>Formula_Address_State_Required</name>
        <dataType>Boolean</dataType>
        <expression>IF({!thisAccountAddress.Country_ISO__c} = &apos;US&apos;, ISBLANK({!thisAccountAddress.State_ISO__c}), false)</expression>
    </formulas>
    <formulas>
        <name>Formula_BillingAggregator_bccAuthDBAccountId</name>
        <dataType>String</dataType>
        <expression>IF(ISBLANK({!thisAccount.Billing_Aggregator__c}), &apos;&apos;, {!thisAccount.Billing_Aggregator__r.BCC_AuthDB_Account_ID__c})</expression>
    </formulas>
    <formulas>
        <description>Determines the billing aggregator user name for the account</description>
        <name>Formula_BillingAggregator_Username</name>
        <dataType>String</dataType>
        <expression>IF(ISBLANK({!thisAccount.Billing_Aggregator__c}), &apos;&apos;, {!thisAccount.Billing_Aggregator__r.User_na__c})</expression>
    </formulas>
    <formulas>
        <description>If partner created date exists then use that date else use current date.</description>
        <name>Formula_PartnerCreatedDate</name>
        <dataType>Date</dataType>
        <expression>IF(ISBLANK({!thisAccount.Partner_Created_Date_MSP__c}), {!$Flow.CurrentDate}, {!thisAccount.Partner_Created_Date_MSP__c})</expression>
    </formulas>
    <interviewLabel>Create ECHO Username {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Create ECHO Username</label>
