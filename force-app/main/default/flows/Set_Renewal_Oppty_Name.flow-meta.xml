    <formulas>
        <name>newOppName</name>
        <dataType>String</dataType>
        <expression>IF(
	{!countRenewedContracts} &gt; 1, 
	LEFT({!account.Name}, 82) + &quot; - Renewal Oppty - &quot; + {!contract.ContractNumber} + &quot; - Co-term&quot;,
	LEFT({!account.Name}, 92) + &quot; - Renewal Oppty - &quot; + {!contract.ContractNumber}
)</expression>
    </formulas>
    <interviewLabel>Set Renewal Oppty Name {!$Flow.CurrentDateTime}</interviewLabel>
