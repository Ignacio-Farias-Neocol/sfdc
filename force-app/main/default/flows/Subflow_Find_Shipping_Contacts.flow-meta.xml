    <formulas>
        <name>formulaFirstName</name>
        <dataType>String</dataType>
        <expression>LEFT({!get_Account.Ship_To_Contact__c}, FIND( &quot; &quot;,{!get_Account.Ship_To_Contact__c}) -1 )</expression>
    </formulas>
    <formulas>
        <name>formulaLastName</name>
        <dataType>String</dataType>
        <expression>RIGHT({!get_Account.Ship_To_Contact__c}, LEN({!get_Account.Ship_To_Contact__c}) - FIND(&quot; &quot;,{!get_Account.Ship_To_Contact__c}))</expression>
    </formulas>
