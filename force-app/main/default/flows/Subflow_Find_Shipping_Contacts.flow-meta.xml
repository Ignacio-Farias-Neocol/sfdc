    <decisions>
        <name>Contact_found</name>
        <label>Contact Found</label>
        <locationX>182</locationX>
        <locationY>974</locationY>
        <defaultConnector>
            <targetReference>Create_new_Shipping_Contact</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Did not find a contact</defaultConnectorLabel>
        <rules>
            <name>Found_a_contact</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>get_Contact_with_Ship_to_Email.Id</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Assign_Opp_Values_Contact</targetReference>
            </connector>
            <label>Found a contact</label>
        </rules>
    </decisions>
    <decisions>
        <description>Decision element checks to see if the Opportunity has a Renewal or Amendment</description>
        <name>Renewal_or_Amendment</name>
        <label>Renewal or Amendment</label>
        <locationX>644</locationX>
        <locationY>242</locationY>
        <defaultConnector>
            <targetReference>get_Account</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Not Renewal or Amendment</defaultConnectorLabel>
        <rules>
            <name>Renewal_Contract</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>get_triggering_Opportunity.SBQQ__RenewedContract__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Set_Contract_Renewal</targetReference>
            </connector>
            <label>Renewal Contract</label>
        </rules>
        <rules>
            <name>Amendment_Contract</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>get_triggering_Opportunity.SBQQ__AmendedContract__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Set_Contract_Amendment</targetReference>
            </connector>
            <label>Amendment Contract</label>
        </rules>
    </decisions>
    <decisions>
        <description>Decision element tells if the Shipping Contact can be pulled from the original opportunity</description>
        <name>Shipping_Contact</name>
        <label>Shipping Contact</label>
        <locationX>644</locationX>
        <locationY>758</locationY>
        <defaultConnectorLabel>No Ship to Email on Acct</defaultConnectorLabel>
        <rules>
            <name>Acct_HAS_Ship_to_Email</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>get_Account.Ship_To_Email__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>get_Contact_with_Ship_to_Email</targetReference>
            </connector>
            <label>Acct HAS Ship to Email</label>
        </rules>
    </decisions>
    <description>Launched from Scheduled Flow
Last Update: Error Capture SH 11/2/2023</description>
