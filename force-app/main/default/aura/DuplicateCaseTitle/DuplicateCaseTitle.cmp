<aura:component implements="flexipage:availableForRecordHome,force:hasRecordId" access="global" controller="DuplicateCaseTitleController">
    
    <aura:attribute name="hasDuplicates" type="Boolean" default="false" />
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
    <lightning:notificationsLibrary aura:id="notifLib"/>
    
    <aura:if isTrue="{!v.hasDuplicates}">
        <div class="slds-box slds-theme_default color">
            <div class="slds-align_absolute-center slds-text-heading_small"><strong>Duplicate case</strong></div>
            <div class="slds-align_absolute-center"><strong>Check recent contact cases below.</strong></div>        
        </div>        
    </aura:if>
</aura:component>