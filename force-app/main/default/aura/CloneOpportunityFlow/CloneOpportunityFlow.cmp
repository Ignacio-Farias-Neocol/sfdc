<aura:component controller="CloneOpportunityFlowController" implements="force:lightningQuickActionWithoutHeader,force:hasRecordId" description="CloneOppty">
    <aura:attribute name="hasPermission" type="Boolean" default="false"/>
    <aura:handler name="init" value="{!this}" action="{!c.init}" />

    <aura:if isTrue="{!v.hasPermission}">
        <div class="slds-text-heading_small slds-m-top_large">Cloning Opportunity...</div>
        <lightning:flow aura:id="flowData" onstatuschange="{!c.handleStatusChange}"/>
    </aura:if>
    <aura:if isTrue="{! !v.hasPermission}">
        <div class="slds-text-heading_small slds-text-align_center slds-m-top_x-large">You don't have permission to clone the opportunity</div>
    </aura:if>
</aura:component>